# Environment Variables Template
# Copy this file to .env and fill in the values

# MongoDB Connection
MONGODB_URL=mongodb+srv://your-user:your-password@your-cluster.mongodb.net/?appName=YourApp

# Server Configuration
NODE_ENV=development
PORT=3333

# Email Configuration (Gmail SMTP)
GMAIL_USER=your-email@gmail.com
GMAIL_PASS=your-app-password

# Passimpay Payment Gateway
PASSIMPAY_PLATFORM_ID=your-platform-id
PASSIMPAY_API_KEY=your-api-key

# Game Scheduler Configuration
GAME_CRON_SCHEDULE=0 0 * * *
TIMEZONE=Asia/Kolkata
